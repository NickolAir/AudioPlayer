<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioPlayer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#26A69A</item>
        <item name="colorPrimaryVariant">#26A69A</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00B0FF</item>
        <item name="colorSecondaryVariant">#651FFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FD5270</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="MyToolBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">@color/gray</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="popupMenuStyle">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#40C4FF</item>
    </style>
</resources>